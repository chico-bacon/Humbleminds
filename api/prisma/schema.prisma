generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./biblioteca.db"
}

model Genero {
  id    Int     @id @default(autoincrement())
  nome  String
  Livro Livro[]
}

model Editora {
  id    Int     @id @default(autoincrement())
  nome  String
  Livro Livro[]
}

model Livro {
  id              String   @id @default(uuid())
  titulo          String
  genero          Genero   @relation(fields: [id_genero], references: [id])
  id_genero       Int
  editora         Editora  @relation(fields: [id_editora], references: [id])
  id_editora      Int
  data_lancamento DateTime
  paginas         Int
}

model Leitor {
  id              String   @id @default(uuid())
  nome            String
  data_nascimento DateTime
  email           String
  senha           String
}
